{
	"name": "chit-chat-central",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"start": "node build/index.js",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"amplify:OnProfilePictureUpload_OLD": "cd amplify/backend/function/OnProfilePictureUpload/lib && npm install && npm run build && cd ../src && npm install && rimraf node_modules/sharp && npm install --arch=x64 --platform=linux --libc=glibc sharp && cd ..",
		"amplify:OnProfilePictureUpload": "cd amplify/backend/function/OnProfilePictureUpload/lib && npm install && npm run build && cd ..",
		"amplify:CCCAPI": "cd amplify/backend/function/CCCAPI/lib && npm install && npm run build && cd .."
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.5.0",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"autoprefixer": "^10.4.14",
		"daisyui": "^3.0.0",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte": "^2.26.0",
		"postcss": "^8.4.23",
		"postcss-load-config": "^4.0.1",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"svelte": "^3.54.0",
		"svelte-check": "^3.0.1",
		"svelte-preprocess": "^5.0.3",
		"tailwindcss": "^3.3.1",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.3.0"
	},
	"type": "module",
	"dependencies": {
		"@fortawesome/free-brands-svg-icons": "^6.4.0",
		"@fortawesome/free-solid-svg-icons": "^6.4.0",
		"@sveltejs/adapter-node": "^1.2.4",
		"@sveltejs/adapter-static": "^2.0.2",
		"@zerodevx/svelte-toast": "^0.9.3",
		"aws-amplify": "^5.2.4",
		"nanoid": "^4.0.2",
		"svelte-loading-spinners": "^0.3.4"
	}
}
